<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_details_fragment"
        android:layout_width="414dp"
        android:layout_height="533dp"
        android:layout_gravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/details_header"
            android:layout_width="61dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.065">

            <ImageView
                android:id="@+id/event_type_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="Icon"
                android:src="@drawable/earthquake"
                app:tint="@color/black" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Earthquake"
            android:textAlignment="viewStart"
            android:textColor="@color/red_500"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/details_header"
            app:layout_constraintTop_toTopOf="@+id/details_header" />

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/typcn_pin_outline"
            app:layout_constraintBottom_toBottomOf="@+id/details_header"
            app:layout_constraintStart_toEndOf="@+id/details_header" />

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Jerusalem"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/location_icon"
            app:layout_constraintStart_toEndOf="@+id/location_icon"
            app:layout_constraintTop_toTopOf="@+id/location_icon" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:text="19:03"
            app:layout_constraintBottom_toBottomOf="@+id/event_title"
            app:layout_constraintStart_toEndOf="@+id/event_title"
            app:layout_constraintTop_toTopOf="@+id/event_title"
            app:layout_constraintVertical_bias="0.875" />


        <TextView
            android:id="@+id/event_description"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
            android:textAlignment="viewStart"
            android:textSize="16sp"
            app:layout_anchor="@+id/event_details_fragment"
            app:layout_anchorGravity="bottom|center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_header" />


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_anchor="@+id/event_details_fragment"
            app:layout_anchorGravity="bottom|center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_description" />

        <ImageView
            android:id="@+id/comments_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_comments"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialDivider"
            app:tint="@color/red_600" />

        <TextView
            android:id="@+id/comments_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Comments"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/comments_icon"
            app:layout_constraintStart_toEndOf="@+id/comments_icon"
            app:layout_constraintTop_toTopOf="@+id/comments_icon" />

        <TextView
            android:id="@+id/comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="18"
            android:textColor="@color/red_600"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/comments_title"
            app:layout_constraintStart_toEndOf="@+id/comments_title"
            app:layout_constraintTop_toTopOf="@+id/comments_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/user_image_card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="94dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/comment_input_card"
            android:layout_width="208dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/user_image_card"
            app:layout_constraintStart_toEndOf="@+id/user_image_card"
            app:layout_constraintTop_toTopOf="@+id/user_image_card">


            <EditText
                android:id="@+id/comment_input"
                style="@style/Widget.Material3.TextInputEditText.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@color/lightGrey"
                android:ems="10"
                android:hint="Add a comment..."
                android:inputType="text"
                android:padding="2dp"
                android:text=""
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/user_image_card"
                app:layout_constraintStart_toEndOf="@+id/user_image_card"
                app:layout_constraintTop_toTopOf="@+id/user_image_card"
                app:layout_constraintVertical_bias="0.761" />
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/add_image_button"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/red_600"
            app:icon="@drawable/baseline_image_24"
            app:layout_constraintBottom_toBottomOf="@+id/comment_input_card"
            app:layout_constraintStart_toEndOf="@+id/comment_input_card"
            app:layout_constraintTop_toTopOf="@+id/comment_input_card"
            app:layout_constraintVertical_bias="0.555" />

        <Button
            android:id="@+id/add_comment_button"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="@color/red_600"
            app:icon="@drawable/baseline_arrow_circle_up_24"
            app:layout_constraintBottom_toBottomOf="@+id/add_image_button"
            app:layout_constraintStart_toEndOf="@+id/add_image_button"
            app:layout_constraintTop_toTopOf="@+id/add_image_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>